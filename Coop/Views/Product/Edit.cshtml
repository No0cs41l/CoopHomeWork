@model Coop.Models.AssortimentProduct
 

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.EANCode" class="control-label"></label>
                <input asp-for="Product.EANCode" class="form-control" />
                <span asp-validation-for="Product.EANCode" class="text-danger"></span>
                
            </div>
            <div class="form-group">
               @Html.DropDownList("AssortmentId1", (IEnumerable<SelectListItem>)ViewData["AssortmentId1"])
               

            </div>
            <div class="form-group" style="display:none">
                <input type="text" name="iad" value="@ViewData["iad"]" /> 
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Views">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
